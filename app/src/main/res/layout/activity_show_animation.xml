<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="text.mycheckdemo.ShowAnimationActivity">


    <TextView
        android:id="@+id/tv_ShowAnim"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="展示objectAnimation动画"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_ShowValueAnim"
        android:layout_below="@+id/tv_ShowAnim"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="展示ValueAnimation动画"
        android:gravity="center"/>



    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_launcher"
        android:visibility="gone"/>
    
    <text.mycheckdemo.weight.AnimPointView
        android:id="@+id/potintView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F0F000"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
